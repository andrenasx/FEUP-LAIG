<lsf>
    <initials>
        <reference length="2" />
        <root id="root" />
    </initials>
    <views default="Animated">
        <perspective id="Animated" near="0.1" far="100" angle="45">
            <from x="3.8" y="1.9" z="2.5" />
            <to x="5.5" y="0.89" z="2.5" />
        </perspective>
        
        <perspective id="Front" near="0.1" far="150" angle="25">
            <from x="5.5" y="2.5" z="6" />
            <to x="5.5" y="1" z="3" />
        </perspective>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.1" g="0.7" b="1.0" a="1.0" />
    </illumination>


    <lights>
        <light id="topBoard">
            <enable value="1" />    <!-- enable/disable -->
            <position x="5.5" y="7" z="3" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />   <!-- ambient component -->
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" /> <!-- diffuse component -->
            <specular r="0.7" g="0.7" b="0.7" a="0.8" />    <!-- specular component -->
        </light>

        <light id="frontMenu">
            <enable value="0" />
            <position x="5.5" y="4" z="8" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </light>
    </lights>

    <textures>
        <texture id="carpet_texture" path="./scenes/images/carpet.jpg" />
        <texture id="table_wood_texture" path="./scenes/images/table_wood.jpg" />
        <texture id="floor_texture" path="./scenes/images/floor.jpg" />
        <texture id="blue_pillow_texture" path="./scenes/images/blue_pillow.jpg" />
        <texture id="metal_texture" path="./scenes/images/metal.jpg" />
    </textures>

    <spritesheets>
    </spritesheets>

    <materials>
        <material id="white_diffuse_material">
            <shininess value="1" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="red_material">
            <shininess value="1" />
            <ambient r="0.3" g="0" b="0" a="1.0" />
            <diffuse r="1" g="0" b="0" a="1.0" />
            <specular r="0.4" g="0.1" b="0.1" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="blue_material">
            <shininess value="1" />
            <ambient r="0" g="0" b="0.3" a="1.0" />
            <diffuse r="0" g="0" b="1" a="1.0" />
            <specular r="0.1" g="0.1" b="0.4" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="wall_material">
            <shininess value="1" />
            <ambient r="0.03" g="0.3" b="0.43" a="1.0" />
            <diffuse r="0.03" g="0.3" b="0.43" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="black_material">
            <shininess value="1" />
            <ambient r="0.04" g="0.04" b="0.04" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.04" g="0.04" b="0.04" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        
    </materials>

    <animations>
    </animations>

    <nodes>     
        <node id="root">
            <material id="white_diffuse_material" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="table" />
                <noderef id="walls" />
                <noderef id="bench_left" />
                <noderef id="bench_right" />
            </descendants>
        </node>

        <!-- Cube -->
        <node id="cube">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="cube_side_1" />
                <noderef id="cube_side_2" />
                <noderef id="cube_side_3" />
                <noderef id="cube_side_4" />
                <noderef id="cube_top" />
                <noderef id="cube_bottom" />
            </descendants>
        </node>

        <node id="cube_side_1">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="-0.5" z="0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_side_2">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.5" y="-0.5" z="0.5" />
                <rotation axis="y" angle="90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_side_3">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="180" />
                <translation x="-0.5" y="-0.5" z="0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_side_4">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="-0.5" z="-0.5" />
                <rotation axis="y" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_top">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="0.5" z="0.5" />
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_bottom">            
            <material id="null" />
            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="-0.5" z="-0.5" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <!--Table-->
        <node id="table">
            <material id="white_diffuse_material" />

            <texture id="table_wood_texture">
                <amplification afs="1.0" aft="1.0" />
            </texture>
            <transformations>
                <translation x="5.5" y="0.0" z="2.5" />
            </transformations>

            <descendants>
                <noderef id="table_top" />
                <noderef id="table_legs" />
                <noderef id="table_carpet" />
            </descendants>
        </node>

        <node id="table_top">
            <material id="null" />

            <texture id="null">
                <amplification afs="2.0" aft="3.0" />
            </texture>

            <transformations>
                <translation x="0" y="0.775" z="0" />
                <scale sx="1.5" sy="0.1" sz="2" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <node id="table_legs">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="table_legs_1" />
                <noderef id="table_legs_2" />
                <noderef id="table_legs_3" />
                <noderef id="table_legs_4" />
            </descendants>
        </node>

        <node id="table_legs_1">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.45" y="0.4" z="0.8" />
                <scale sx="0.2" sy="0.655" sz="0.2" />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>

        <node id="table_legs_2">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.9" y="0" z="0" />
            </transformations>

            <descendants>
                <noderef id="table_legs_1" />
            </descendants>
        </node>

        <node id="table_legs_3">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="-1.6" />
            </transformations>

            <descendants>
                <noderef id="table_legs_1" />
            </descendants>
        </node>

        <node id="table_legs_4">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="-1.6" />
            </transformations>

            <descendants>
                <noderef id="table_legs_2" />
            </descendants>
        </node>

        <node id="table_carpet">
            <material id="null" />

            <texture id="carpet_texture">
                <amplification afs="2.0" aft="3.0" />
            </texture>

            <transformations>
                <translation x="0" y="0.035" z="0" />
                <scale sx="3" sy="0.06" sz="3.5"  />
            </transformations>

            <descendants>
                <noderef id="cube" />
            </descendants>
        </node>
        
        <!--Walls-->
        <node id="walls">
            <material id="null" />

            <texture id="null">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="floor" />
                <noderef id="wall_back" />
                <noderef id="wall_left" />
                <noderef id="wall_right" />
                <noderef id="wall_front" />
            </descendants>
        </node>

        <node id="floor">
            <material id="null" />

            <texture id="floor_texture">
                <amplification afs="2" aft="3" />
            </texture>

            <transformations>
               <translation x="0" y="0" z="6" />
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="8" y2="6"/>
            </descendants>
        </node>

        <node id="wall_back">
            <material id="wall_material" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="4" y="1.5" z="0" />
                <scale sx="8" sy="3" sz="1" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="plane" npartsU="10" npartsV="10" />
            </descendants>
        </node>

        <node id="wall_left">
            <material id="null" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="6" />
                <scale sx="1" sy="1" sz="0.75" />
                <rotation axis="y" angle="90" />
            </transformations>

            <descendants>
                <noderef id="wall_back" />
            </descendants>
        </node>

        <node id="wall_right">
            <material id="null" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="8" y="3" z="0" />
                <rotation axis="z" angle="180" />
            </transformations>

            <descendants>
                <noderef id="wall_left" />
            </descendants>
        </node>

        <node id="wall_front">
            <material id="null" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="0" y="3" z="6" />
                <rotation axis="x" angle="180" />
            </transformations>

            <descendants>
                <noderef id="wall_back" />
            </descendants>
        </node>

        <!--Bench-->
        <node id="bench">
            <material id="null" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="0" y="0.645" z="0" />
            </transformations>

            <descendants>
                <noderef id="bench_seat" />
                <noderef id="bench_support" />
                <noderef id="bench_feet_support" />
                <noderef id="bench_base" />
            </descendants>
        </node>

        <node id="bench_seat">
            <material id="null" />

            <texture id="blue_pillow_texture">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <scale sx="0.5" sy="0.1" sz="0.5" />
            </transformations>

            <descendants>
                <leaf type="sphere" radius="0.40" slices="20" stacks="20" />               
            </descendants>
        </node>

        <node id="bench_support">
            <material id="black_material" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.55" topRadius="0.03" bottomRadius="0.03" stacks="20" slices="20" />
            </descendants>
        </node>

        <node id="bench_feet_support">
            <material id="null" />

            <texture id="metal_texture">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="0.079" y="-0.4" z="0" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="torus" inner="0.01" outer="0.09" slices="20" loops="50"/>
            </descendants>
        </node>
        
        <node id="bench_base">
            <material id="null" />

            <texture id="metal_texture">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="0" y="-0.55" z="0" />
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.03" topRadius="0.08" bottomRadius="0.08" stacks="10" slices="20" />               
            </descendants>
        </node>

        <node id="bench_left">
            <material id="null" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="4.6" y="0" z="2.5" />
            </transformations>

            <descendants>
                <noderef id="bench" />
            </descendants>
        </node>

        <node id="bench_right">
            <material id="null" />

            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>

            <transformations>
                <translation x="11.03" y="0" z="5.05" />
                <rotation axis="y" angle="180" />
            </transformations>

            <descendants>
                <noderef id="bench_left" />
            </descendants>
        </node>
    </nodes>

    <game>
        <piecetype id="player1" geometry="pyramid" material="red_material" />
        <piecetype id="player-1" geometry="cone" material="blue_material" />
    </game>
</lsf>