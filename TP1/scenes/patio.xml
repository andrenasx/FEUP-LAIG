<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="demoTexture" path="./scenes/images/vidral.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial">
            <shininess value="ff" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="cube">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="cube_side_1" />
                <noderef id="cube_side_2" />
                <noderef id="cube_side_3" />
                <noderef id="cube_side_4" />
                <noderef id="cube_top" />
                <noderef id="cube_bottom" />
            </descendants>
        </node>

        <node id="cube_side_1">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="-0.5" z="0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_side_2">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.5" y="-0.5" z="0.5" />
                <rotation axis="yy" angle="90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_side_3">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="yy" angle="180" />
                <translation x="-0.5" y="-0.5" z="0.5" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_side_4">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="-0.5" z="-0.5" />
                <rotation axis="yy" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_top">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="0.5" z="0.5" />
                <rotation axis="xx" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="cube_bottom">            
            <material id="null" />
            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-0.5" y="-0.5" z="-0.5" />
                <rotation axis="xx" angle="90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1" />
            </descendants>
        </node>

        <node id="floater">
            <material id="demoMaterial" />

            <texture id="demoTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="13" y="0" z="6" />
                <rotation axis="xx" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="torus" inner="0.1" outer="0.4" slices="200" loops="50"/>
            </descendants>

        </node>

        <node id="root">
            <material id="demoMaterial" />

            <texture id="demoTexture">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>    
            </transformations>

            <descendants>
                <noderef id="floor" />
                <noderef id="floater" />
            </descendants>
        </node>

        <node id="floor">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="floor_side_1" />
                <noderef id="floor_side_2" />
                <noderef id="floor_side_3" />
                <noderef id="floor_side_4" />
            </descendants>
        </node>

        <node id="floor_side_1">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="5" />
                <rotation axis="xx" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="14" y2="5"/>
            </descendants>
        </node>

        <node id="floor_side_2">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="zz" angle="-90" />
                <rotation axis="yy" angle="-90" />
                <translation x="5" y="0" z="0" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="5" y2="1" />
            </descendants>
        </node>

        <node id="floor_side_3">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="11" y="0" z="0" />
                <scale sx="3" sy="1" sz="1" />
            </transformations>

            <descendants>
                <noderef id="floor_side_2" />
            </descendants>
        </node>

        <node id="floor_side_4">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="1" y="0" z="10" />
                <rotation axis="xx" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0.0" y1="0.0" x2="10" y2="1"/>
            </descendants>
        </node>
    </nodes>
</lsf>